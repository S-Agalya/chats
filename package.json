{
  "name": "nodejsjesttemplate",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "devDependencies": {
    "jest": "^27.0.0"
  },
  "jest": {
    "transform": {},
    "testMatch": [
      "<rootDir>/src/**/*.test.js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "./coverage"
  }
}

